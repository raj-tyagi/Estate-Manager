<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Property Details (for sale)"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Property Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Property Address"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property address"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white" />

        <!-- Contact Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Contact Information"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/ContactEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter contact information"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white" />

        <!-- Owner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Owner"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/OwnerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter owner details"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white" />

        <!-- Property Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="4. Property Price(INR)"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property price"
            android:inputType="numberDecimal"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white" />

        <!-- Property Size -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Property Size(sq ft.)"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/sizeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property size"
            android:inputType="numberDecimal"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white" />

        <!-- Select Image Button -->
        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Relevent Image"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- Property Image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Image:"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/propertyImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Property Image"
            android:scaleType="centerCrop"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
