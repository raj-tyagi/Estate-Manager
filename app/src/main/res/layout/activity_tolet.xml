<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ty"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Property Details(for Rent)"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Property Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Property Address"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property address"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

        <!-- Contact Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Contact Information"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/contactEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter contact information"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

        <!-- Owner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Owner"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/ownerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter owner details"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

        <!-- Property Rent -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="4. Property Rent(INR per Month)"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property rent"
            android:inputType="numberDecimal"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

        <!-- Property Size -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Property Size(sq ft.)"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/sizeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property size"
            android:inputType="numberDecimal"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

        <!-- Choose Image Button -->
        <Button
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Relevant Image"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />


        <!-- Property Image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Image:"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/propertyImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Property Image"
            android:scaleType="centerCrop"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />




        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
